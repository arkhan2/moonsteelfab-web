{
	"name": "moonsteelfab-web",
	"private": true,
	"workspaces": [
		"web",
		"api"
	],
	"scripts": {
		"build": "npm run web:deploy",
		"deploy": "npm run web:deploy && npx wrangler pages deploy web/.vercel/output/static",
		"web:dev": "npm -w ./web run dev",
		"web:build": "npm -w ./web run build",
		"web:deploy": "npm -w ./web run deploy",
		"api:dev": "npm -w ./api run dev",
		"api:deploy": "npm -w ./api run deploy",
		"api:secret": "npm -w ./api run secret",
		"db:local:create": "npm -w ./api run db:local:create",
		"db:local:migrate": "npm -w ./api run db:local:migrate",
		"db:prod:create": "npm -w ./api run db:prod:create",
		"db:prod:migrate": "npm -w ./api run db:prod:migrate",
		"lint": "npm --workspaces run lint",
		"typecheck": "npm --workspaces run typecheck"
	},
	"devDependencies": {
		"wrangler": "^4.0.0"
	}
}